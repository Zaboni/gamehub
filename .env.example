# GameHub Environment Variables
# Copy this file to .env.local and update the values

# Database (when you add a database)
# DATABASE_URL="postgresql://username:password@localhost:5432/gamehub"

# Authentication (when you add auth)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-secret-key-here"

# GitHub OAuth (for contributor authentication)
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# Analytics (optional)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Email (for notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# File Storage (for game assets)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="gamehub-assets"

# Redis (for caching)
# REDIS_URL="redis://localhost:6379"

# Development
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"